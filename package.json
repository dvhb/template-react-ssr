{
  "name": "template-react-ssr",
  "version": "1.0.0",
  "description": "The base template for dvhb web app with server side rendering.",
  "keywords": [
    "react",
    "next.js",
    "template",
    "typescript",
    "dvhb"
  ],
  "bugs": {
    "url": "https://github.com/dvhb/template-react-ssr/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dvhb/template-react-ssr.git"
  },
  "license": "MIT",
  "author": "dvhb team <team@dvhb.ru>",
  "main": "template.json",
  "files": [
    "template",
    "template.json"
  ],
  "scripts": {
    "lint:template": "cd template && npm run tsc && npm run lint",
    "semantic-release": "semantic-release",
    "test": "cd template && npm ci && npm run tsc && cp .env.example .env && npm run build && npm run storybook:build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint:template",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{json,md,graphql}": [
      "prettier --write",
      "git add --force"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "semantic-release": "^17.0.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
